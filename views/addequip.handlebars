<h1>Add Equipment</h1>
{{#if error}} <span>{{error}}</span> {{/if}}
<form action="/equip/add" method="POST">
    <div class="form-group">
        <label>ID</label>
        <input type="text" name="id" placeholder="Add ID" class="form-control">
    </div>
    <div class="form-group">
        <label>Type</label>
        <input type="text" name="type" placeholder="Type" class="form-control">
    </div>
    <div class="form-group">
        <label>Brand</label>
        <input type="text" name="brand" placeholder="Brand" class="form-control">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" name="price" placeholder="Price" class="form-control">
    </div>
    <div class="form-group">
        <label>Place</label>
        <input type="text" name="place" placeholder="Place" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="Save">
</form>